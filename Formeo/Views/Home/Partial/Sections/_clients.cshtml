<div class="row">
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-default text-center btn-sidebar-menu" ng-click="selectClientMenu('/AddUser')" ng-class="{'btn-menu-selected': isActiveCLientsMenu('/AddUser')}">
            <i class="fa fa-user fa-2x"></i>
            <i class="fa fa-plus"></i>
            <br>Add user
        </button>
        <button type="button" disabled class="btn btn-default text-center btn-sidebar-menu" ng-click="selectClientMenu('/GetInfo')" ng-class="{'btn-menu-selected': isActiveCLientsMenu('/GetInfo')}">
            <i class="fa fa-file-text fa-2x"></i>
            <br>Get info
        </button>
        <button type="button" class="btn btn-default text-center btn-sidebar-menu" ng-click="selectClientMenu('/ManageUser')" ng-class="{'btn-menu-selected': isActiveCLientsMenu('/ManageUser')}">
            <i class="fa fa-user fa-2x"></i>
            <i class="fa fa-cog" ng-class="{'fa-spin': isActiveCLientsMenu('/ManageUser')}"></i>
            <br>Manage user
        </button>
    </div>
</div>

<div class="row">
    <div class="container">
        <form role="form" ng-show="isActiveCLientsMenu('/AddUser')">
            <div class="padding30px">
                <div class="row form-group-margin">
                    <input type="text" ng-model="userModel.username" placeholder="Username" autofocus class="form-control login-textbox textbox-menu" />
                    <input type="text" ng-model="userModel.password" placeholder="Password" autofocus class="form-control login-textbox textbox-menu" />
                    <input type="text" ng-model="userModel.email" placeholder="Email" autofocus class="form-control login-textbox textbox-menu" />
                </div>
                <div class="row form-group-margin">
                    <input type="text" ng-model="userModel.address" placeholder="Address" autofocus class="form-control login-textbox textbox-menu" />
                    <input type="text" ng-model="userModel.postal" placeholder="Postal" autofocus class="form-control login-textbox textbox-menu" />
                    <input type="text" ng-model="userModel.city" placeholder="City" autofocus class="form-control login-textbox textbox-menu" />
                    <input type="text" ng-model="userModel.country" placeholder="Country" autofocus class="form-control login-textbox textbox-menu" />
                </div>
                <div class="row form-group-margin">
                    <div class="left">
                        <div class="form-group">
                            <label for="isProduction" style="font-size: medium">Production</label>
                            <input class="pointer" name="isProduction" ng-model="userModel.isProduction" type="checkbox" value="">
                        </div>
                        <div class="form-group">
                            <label for="isCustomer" style="font-size: medium">Customer</label>
                            <input class="pointer" name="isCustomer" ng-model="userModel.isCustomer" type="checkbox" value="">
                        </div>
                        <div class="form-group">
                            <label for="isAdmin" style="font-size: medium">Admin</label>
                            <input class="pointer" name="isAdmin" ng-model="userModel.isAdmin" type="checkbox" value="">
                        </div>
                    </div>
                    <div class="right">
                        <button type="button" class="btn btn-default text-center btn-upload-product" style="height: 70px; width: 70px;">
                            Add
                        </button>
                    </div>
                </div>
            </div>
        </form>
        <form role="form" ng-show="isActiveCLientsMenu('/ManageUser')">
            <div class="padding30px">
                <div class="row form-group-margin">
                    <div class="row editable-field">
                        <div class="edit-value-holder">
                            &#60; User Name &#62;
                        </div>
                        <div class="edit-link-holder">
                            <a class="btn-edit-link" href="#">Change</a>
                        </div>
                    </div>

                    <div class="row editable-field">
                        <div class="edit-value-holder">
                            &#60; Password &#62;
                        </div>
                        <div class="edit-link-holder">
                            <a class="btn-edit-link" href="#">Change</a>
                        </div>
                    </div>

                    <div class="row editable-field">
                        <div class="edit-value-holder">
                            &#60; Email &#62;
                        </div>
                        <div class="edit-link-holder">
                            <a class="btn-edit-link" href="#">Change</a>
                        </div>
                    </div>
                </div>

                <div class="row form-group-margin">
                    <div class="row editable-field">
                        <div class="edit-value-holder">
                            &#60;Address&#62;
                        </div>
                        <div class="edit-link-holder">
                            <a class="btn-edit-link" href="#">Change</a>
                        </div>
                    </div>

                    <div class="row editable-field">
                        <div class="edit-value-holder">
                            &#60;Postal&#62;
                        </div>
                        <div class="edit-link-holder">
                            <a class="btn-edit-link" href="#">Change</a>
                        </div>
                    </div>

                    <div class="row editable-field">
                        <div class="edit-value-holder">
                            &#60;City&#62;
                        </div>
                        <div class="edit-link-holder">
                            <a class="btn-edit-link" href="#">Change</a>
                        </div>
                    </div>

                    <div class="row editable-field">
                        <div class="edit-value-holder">
                            &#60;Country&#62;
                        </div>
                        <div class="edit-link-holder">
                            <a class="btn-edit-link" href="#">Change</a>
                        </div>
                    </div>
                </div>

                <div class="row form-group-margin">

                    <div class="left">
                        <div class="form-group">
                            <label for="isProduction" style="font-size: medium">Production</label>
                            <input class="pointer" name="isProduction" ng-model="userModel.isProduction" type="checkbox" readonly="readonly">
                        </div>
                        <div class="form-group">
                            <label for="isCustomer" style="font-size: medium">Customer</label>
                            <input class="pointer" name="isCustomer" ng-model="userModel.isCustomer" type="checkbox" readonly="readonly">
                        </div>
                        <div class="form-group">
                            <label for="isAdmin" style="font-size: medium">Admin</label>
                            <input class="pointer" name="isAdmin" ng-model="userModel.isAdmin" type="checkbox" readonly="readonly">
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

