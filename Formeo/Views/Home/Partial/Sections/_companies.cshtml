<div class="row">
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-default text-center btn-sidebar-menu" ng-click="selectCompaniesMenu('/AddCompany')" ng-class="{'btn-menu-selected': isActiveCompaniesMenu('/AddCompany')}">
            <i class="fa fa-plus-square fa-2x"></i>
            <br>Add company
        </button>
        <button type="button" class="btn btn-default text-center btn-sidebar-menu" ng-click="selectCompaniesMenu('/ManageCompany')" ng-class="{'btn-menu-selected': isActiveCompaniesMenu('/ManageCompany')}">
            <i class="fa fa-cogs fa-2x"></i>
            <br>Manage company
        </button>
    </div>
</div>


